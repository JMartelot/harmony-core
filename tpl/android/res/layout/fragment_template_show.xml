<#assign name=name?lower_case>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<#list fields as field>
	<#if !field.relation??>
    <TextView 
    	android:id="@+id/${name?lower_case}_${field.name?lower_case}_label"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    <#if (lastFieldName??) >
	    android:layout_below="@+id/${name?lower_case}_${lastFieldName?lower_case}"
	    </#if >
	    <#assign lastFieldName=field.name>
	    android:text="${field.name?lower_case}"/>
    <${field.customShowType}
		android:id="@+id/${name?lower_case}_${field.name?lower_case}"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    <#if field.customShowType == "EditText" >
	    android:inputType="text"
	    </#if >
	    android:layout_below="@+id/${name?lower_case}_${field.name?lower_case}_label" />
		<#assign lastField="${name?lower_case}_${field.name?lower_case}">
	</#if>
</#list>
<#list relations as relation>
	<#if relation.relation.type=="ManyToOne" | relation.relation.type=="OneToOne">
    <TextView 
    	android:id="@+id/${name?lower_case}_${relation.name?lower_case}_label"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    <#if relation_index==0>
	    android:layout_below="@+id/${name?lower_case}_${fields?last.name?lower_case}"
	    <#else>
	    android:layout_below="@+id/${lastField}"
	    </#if>
	    android:text="${relation.name?lower_case}"/>
    <${relation.customShowType}
		android:id="@+id/${name?lower_case}_${relation.name?lower_case}"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    <#if relation.customShowType == "EditText" >
	    android:inputType="text"
	    </#if >
	    android:layout_below="@+id/${name?lower_case}_${relation.name?lower_case}_label" />
		<#assign lastField="${name?lower_case}_${relation.name?lower_case}">
	<#else>
	<TextView 
    	android:id="@+id/${name?lower_case}_${relation.name?lower_case}_label"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/${lastField}"
	    android:text="${relation.name?lower_case}"/>
    <Spinner
        android:id="@+id/${name?lower_case}_${relation.name?lower_case}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:layout_below="@+id/${name?lower_case}_${relation.name?lower_case}_label" />
		<#assign lastField="${name?lower_case}_${relation.name?lower_case}">
	</#if>
</#list>
</RelativeLayout>
