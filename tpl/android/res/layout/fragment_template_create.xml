<#assign name=name?lower_case>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<#list fields as field>
	<#assign m_id="${name?lower_case}_${field.name?lower_case}">
	<#assign m_id_label="${m_id}_label">
	<#if !field.internal && !field.hidden>
		<#if !field.relation??>
    <TextView 
    	android:id="@+id/${m_id_label}"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		    	<#if (lastField??) >
	    android:layout_below="@+id/${lastField}"
		    	</#if >
	    android:text="@string/${m_id_label}"/>
			<#if field.type=="boolean">
    <CheckBox
	    android:id="@+id/${m_id}"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"	
			<#else>
    <EditText
		android:id="@+id/${m_id}"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		    		<#if field.type == "text" >
	    android:inputType="textCapWords|textAutoComplete|textMultiLine"
		    		<#elseif field.type=="password">
	    android:inputType="textPassword"
		    		<#elseif field.type=="email">
	    android:inputType="textEmailAddress"
		    		<#elseif field.type=="date">
	    android:inputType="date"
	    android:focusable="false"
	    			<#elseif field.type=="time">
	    android:inputType="time"
	    android:focusable="false"
		    		<#elseif field.type=="datetime">
	    android:inputType="datetime"
	    android:focusable="false"
		    		<#elseif field.type=="phone">
	    android:inputType="phone"
		    		<#elseif field.type=="zipcode">
	    android:inputType="textPostalAddress"
		    		<#elseif field.type=="integer" || field.type=="int" || field.type=="ean">
	    android:inputType="number"
			    	<#elseif field.type=="float">
	    android:inputType="numberDecimal"
			    	<#else>
	    android:inputType="text"
		    		</#if >
			</#if>
	    android:layout_below="@+id/${m_id_label}" />
			<#assign lastField="${m_id}">
		<#else>
    <TextView 
    	android:id="@+id/${m_id_label}"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		    	<#if (lastField??) >
	    android:layout_below="@+id/${lastField}"
		    	</#if >
	    android:text="@string/${m_id_label}"/>
    <Button
        android:id="@+id/${m_id}_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:layout_below="@+id/${m_id_label}" />
			<#assign lastField="${m_id}_button">
		</#if>
	</#if>
</#list>

	<Button
    	android:id="@+id/${name?lower_case}_btn_save"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	<#if relations?size!=0>
    	android:layout_below="@+id/${lastField}"
    	<#else>
    	android:layout_below="@+id/${name?lower_case}_${fields?last.name?lower_case}"
    	</#if>
    	android:text="Create" />
</RelativeLayout>
